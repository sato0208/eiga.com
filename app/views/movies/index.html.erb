<div class="col-xs-9">
	<h2 class="title-xlarge">
	<%= link_to "最新映画ランキング >","#" %></h2>
		<div class="skipa">
        <div id="theTarget">
			<div class="image image1"></div>
			<!-- <div class="image image2"></div>
			<div class="image image3"></div>
			<div class="image image4"></div>
			<div class="image image5"></div> -->
		</div>
		</div>
	<!-- 今週公開映画ランキングここから -->
	<h2 class="title-xlarge">
	<%= link_to "今週公開の映画 >","#" %></h2>
	<div class="flex">
		<ol class="slide-menu slide-5 slick-initialized slick-slider">
		<div class="slick-list draggable">
		<% @movies.each do |movie| %>
			<%= link_to movie_path(movie) do %>
				<li class="slick-slide slick-current slick-active" data-slick-index="0" aria-hidden="false" tabindex="0" style="width: 166px;">
					<%= attachment_image_tag movie, :movie_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg",size:'153x215'%>
			<%= movie.title %></li>
			<% end %>
		<% end %>
		</div>
		</ol>
	<div>
		<a class="btn" href="#">
			<span class="icon arrow">→ 今週公開の映画を見る
			</span>
		</a>
	</div>
	</div>

	<!-- 最新映画ランキングここから -->
	<h2 class="title-xlarge">
	<%= link_to "最新映画ランキング >","#" %></h2>
	<div class="flex">
	<ol class="slide-menu slide-5 slick-initialized slick-slider">
	<div class="slick-list draggable">
	<% @movies.each do |movie| %>
	<!-- レビューの評価順に並べ替えるように変更する -->
		<%= link_to movie_path(movie) do %>
			<li class="slick-slide slick-current slick-active" data-slick-index="0" aria-hidden="false" tabindex="0" style="width: 166px;">
			<%= attachment_image_tag movie, :movie_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg",size:'153x215'%>
			<%= movie.title %></li>
		<% end %>
	<% end %>
	</div>
	</ol>
	<div>
		<a class="btn" href="#"> 
			<span class="icon arrow">→ 最新映画ランキングを見る</span>
		</a>
	</div>
	</div>
	<!-- 最新映画ランキングここまで -->

	<!-- 映画レビューここから -->
	<h2 class="title-xlarge">
	<%= link_to "映画レビュー >","#" %></h2>
	<div class="flex">
	<ol class="slide-menu slide-5 slick-initialized slick-slider">
	<div class="slick-list draggable">
	<% @movies.each do |movie| %>
	<!-- 映画レビューを表示するように変更する -->
		<%= link_to movie_path(movie) do %>
			<li class="slick-slide slick-current slick-active" data-slick-index="0" aria-hidden="false" tabindex="0" style="width: 166px;">
			<%= attachment_image_tag movie, :movie_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg",size:'153x215'%>
			<%= movie.title %></li>
		<% end %>
	<% end %>
	</div>
	</ol>
	<div>
		<a class="btn" href="#"> 
			<span class="icon arrow">→ 映画レビューをもっと見る</span>
		</a>
	</div>
	</div>
	<!-- 最新映画ランキングここまで -->


<!-- 共通viewのdiv2つ -->
</div>
</div>
